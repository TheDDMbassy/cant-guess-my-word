<%= form.hidden_field :puzzle_id, value: solution.puzzle_id %>
<%= form.text_field :user_guess, autofocus: true, class: ["mr-2 rounded-sm border px-1", {"border-gray-400 focus:outline-blue-600": solution.errors[:most_recent_guess].none?, "border-red-400 focus:outline-red-600": solution.errors[:most_recent_guess].any?}] %>

<%= form.submit "guess", class: "w-20 bg-slate-200 border rounded-sm px-1 font-medium cursor-pointer" %>
<% if solution.errors.any? %>
  <div id="error_explanation" class="text-sm bg-red-50 text-red-500 px-3 mt-1 rounded-sm">
    <% solution.errors.each do |error| %>
      <%= error.message %>
    <% end %>
  </div>
<% end %>
